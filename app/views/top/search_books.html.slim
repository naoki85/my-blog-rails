h1 SearchBooks
= form_with url: search_books_by_keyword_path, method: :get, html: { class: 'js-form-ajax' } do |f|

  .row
    .input-field
      = f.label :keyword
      = f.text_field :keyword, autofocus: true

  .row
    = f.submit 'Search', class: default_btn_class

#result-search-books.ajax-replace-field
